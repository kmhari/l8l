{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ConversationSegregationOutput",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "question_id": { "type": "string", "description": "Qn id or custom:GroupName (with numbering in title if desired)" },
          "question_title": { "type": "string" },
          "type": { "type": "string", "description": "e.g., technical, logistics, experience, compensation, screening, other" },
          "source": { "type": "string", "description": "e.g., known_questions or inferred" },
          "time_range": {
            "type": "object",
            "properties": {
              "start": { "type": "number" },
              "end": { "type": "number" }
            },
            "required": ["start", "end"],
            "additionalProperties": false
          },
          "turn_indices": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "List of turn indices that belong to this conversation group"
          },
          "facts": {
            "type": "object",
            "properties": {
              "answers": { "type": "array", "items": { "type": "string" }, "default": [] },
              "entities": {
                "type": "object",
                "properties": {},
                "additionalProperties": false,
                "default": {}
              }
            },
            "required": ["answers"],
            "additionalProperties": false
          },
          "greenFlags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "redFlags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "metadata": {
            "type": "object",
            "properties": {},
            "additionalProperties": false,
            "default": {}
          }
        },
        "required": [
          "question_id",
          "question_title",
          "type",
          "source",
          "time_range",
          "turn_indices",
          "facts",
          "greenFlags",
          "redFlags",
          "metadata"
        ],
        "additionalProperties": false
      }
    },
    "misc_or_unclear": { "type": "array", "items": { "type": "integer" }, "default": [] },
    "pre_inferred_facts_global": {
      "type": "object",
      "properties": {},
      "additionalProperties": false,
      "default": {}
    },
    "meta": {
      "type": "object",
      "properties": {},
      "additionalProperties": false,
      "default": {}
    }
  },
  "required": ["groups", "misc_or_unclear", "pre_inferred_facts_global", "meta"],
  "additionalProperties": false
}