{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ConversationSegregationOutput",
  "type": "object",
  "properties": {
    "groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "question_id": { "type": "string", "description": "Qn id or custom:GroupName (with numbering in title if desired)" },
          "question_title": { "type": "string" },
          "type": { "type": "string", "description": "e.g., technical, logistics, experience, compensation, screening, other" },
          "source": { "type": "string", "description": "e.g., known_questions or inferred" },
          "time_range": {
            "type": "object",
            "properties": {
              "start": { "type": "number" },
              "end": { "type": "number" }
            },
            "required": ["start", "end"],
            "additionalProperties": false
          },
          "turn_indices": {
            "type": "array",
            "items": { "type": "integer" }
          },
          "conversation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "idx": { "type": "integer" },
                "role": { "type": "string" },
                "message": { "type": "string" },
                "time": { "anyOf": [{"type": "number"}, {"type": "string"}] },
                "endTime": { "anyOf": [{"type": "number"}, {"type": "string"}] },
                "duration": { "anyOf": [{"type": "number"}, {"type": "string"}] },
                "secondsFromStart": { "anyOf": [{"type": "number"}, {"type": "string"}] }
              },
              "required": ["idx", "role", "message", "time", "endTime", "duration", "secondsFromStart"],
              "additionalProperties": true
            }
          },
          "facts": {
            "type": "object",
            "properties": {
              "answers": { "type": "array", "items": { "type": "string" }, "default": [] },
              "entities": { "type": "object", "additionalProperties": true, "default": {} }
            },
            "required": ["answers", "entities"],
            "additionalProperties": false
          },
          "greenFlags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "redFlags": { "type": "array", "items": { "type": "string" }, "default": [] },
          "metadata": { "type": "object", "additionalProperties": true, "default": {} }
        },
        "required": [
          "question_id",
          "question_title",
          "type",
          "source",
          "time_range",
          "turn_indices",
          "conversation",
          "facts"
        ],
        "additionalProperties": false
      }
    },
    "misc_or_unclear": { "type": "array", "items": { "type": "integer" }, "default": [] },
    "pre_inferred_facts_global": { "type": "object", "additionalProperties": true, "default": {} },
    "meta": { "type": "object", "additionalProperties": true, "default": {} }
  },
  "required": ["groups", "misc_or_unclear", "pre_inferred_facts_global"],
  "additionalProperties": false
}